<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/input</item>
    </style>

    <style name="InputStyleLandscape">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:gravity">right</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">5</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/input</item>
    </style>

    <style name="TimeUnitStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textSize">@dimen/time_unit</item>
    </style>

    <style name="NumKeypadStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textSize">@dimen/keypad</item>
    </style>

    <style name="FuncStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/keypad_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/keypad</item>
    </style>
</resources>